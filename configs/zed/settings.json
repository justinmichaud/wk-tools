{
  "format_on_save": "off",
  "file_scan_exclusions": [
    "WebKitBuild",
    "LayoutTests",
    "PerformanceTests",
    "ManualTests",
    "Websites",
    "metadata",
    "resources",
    ".git"
  ],
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.2:latest"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "arm64",
      "projects": [
        {
          "paths": ["~/Development/DebugVersion/OpenSource"]
        },
        {
          "paths": ["~/Development/ReleaseVersion/OpenSource"]
        },
        {
          "paths": ["~/Development/Yocto/OpenSource"]
        }
      ]
    },
    {
      "host": "arm",
      "projects": [
        {
          "paths": ["~/Development/DebugVersion/OpenSource"]
        },
        {
          "paths": ["~/Development/ReleaseVersion/OpenSource"]
        }
      ]
    }
  ],
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "use_system_path_prompts": false, // Use in-container paths instead of host paths
  "lsp": {
    "clangd": {
      "binary": {
        "arguments": ["--header-insertion=never"]
      }
    }
  }
}
